<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/profil_progress"
        style="@android:style/Widget.Holo.ProgressBar.Large"
        android:visibility="visible"
        android:indeterminate="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/profil_error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:text="error"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp" />

    <Button
        android:id="@+id/profil_reload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:text="Reload"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />


    <ImageView
        android:id="@+id/profil_image"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/profil_login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:text="login"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/profil_log_text"
        android:layout_alignStart="@+id/profil_log_text" />

    <TextView
        android:id="@+id/profil_log_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:text="log:"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/profil_login_text"
        android:layout_toRightOf="@+id/profil_progress"
        android:layout_toEndOf="@+id/profil_progress" />

    <ListView
        android:id="@+id/profil_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profil_progress"
        android:visibility="visible" />

</RelativeLayout>